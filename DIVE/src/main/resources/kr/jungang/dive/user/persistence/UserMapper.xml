<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="kr.jungang.dive.user.persistence.UserMapper">
	<resultMap id="userResultMap"
		type="kr.jungang.dive.user.domain.UserVO">
		<id property="userNum" column="user_num" />
		<result property="id" column="id" />
		<result property="password" column="password" />
		<result property="name" column="name" />
		<result property="sex" column="sex" />
		<result property="birthday" column="birthday" />
		<result property="address" column="address" />
		<result property="phone" column="phone" />
		<result property="email" column="email" />
		<result property="regDate" column="reg_date" />
		<result property="updateDate" column="update_date" />
		<result property="enabled" column="enabled" />
		<!-- <collection property="listAuthority" resultMap="authorityResultMap"></collection> 
			<collection property="listContactPoint" resultMap="contactPointResultMap" 
			columnPrefix="contact_"></collection> -->
	</resultMap>
	
	<!-- 아이디로 검색 -->
	<select id="findById" resultMap="userResultMap">
  	<![CDATA[
  		SELECT *
  		  FROM TBL_USER
		 WHERE id = #{id}
  	]]>
	</select>

	<!-- 정보 생성 -->
	<insert id="insertUser">
		<selectKey keyProperty="userNum" order="BEFORE"
			resultType="long">
     <![CDATA[
      SELECT SEQ_USER.NEXTVAL FROM DUAL
   	]]>
		</selectKey>
		INSERT INTO TBL_USER
		(user_num, id, password, name, sex, birthday, address, phone, email)
		<!-- ,jdbcType=Type : null을 허용하려면 입력해줘야함 -->
		VALUES(#{userNum},#{id},#{password},#{name, jdbcType=VARCHAR},#{sex, jdbcType=CHAR},
		#{birthday, jdbcType=CHAR},#{address, jdbcType=VARCHAR},#{phone, jdbcType=VARCHAR},#{email, jdbcType=VARCHAR})
	</insert>
</mapper>